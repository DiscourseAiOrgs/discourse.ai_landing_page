{
  "name": "discourse.ai",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --parallel dev:api dev:web",
    "dev:api": "bun run --filter @discourse/api dev",
    "dev:web": "bun run --filter @discourse/web dev",
    "build": "bun run --filter '*' build",
    "db:migrate": "bun run --filter @discourse/db migrate",
    "db:push": "bun run --filter @discourse/db push",
    "lint": "bunx biome check .",
    "format": "bunx biome format --write .",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.6.0"
  }
}